<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.View.EditarContactoPage"
             Title="EditarContactoPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry Placeholder="Nombre" Text="{Binding Contacto.Nombre}" />
        <Entry Placeholder="Teléfono" Text="{Binding Contacto.Telefono}" />
        <Entry Placeholder="Correo (opcional)" Text="{Binding Contacto.Correo}" />
        <Entry Placeholder="Dirección (opcional)" Text="{Binding Contacto.Direccion}" />

        <Button Text="Guardar cambios"
                Command="{Binding GuardarCambiosCommand}" />
    </VerticalStackLayout>
</ContentPage>