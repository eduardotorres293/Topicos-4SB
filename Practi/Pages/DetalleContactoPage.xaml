<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proyecto5.Pages.DetalleContactoPage"
             Title="DetalleContactoPage">
    <Grid Padding="10" ColumnDefinitions="Auto,*"
RowDefinitions="Auto,Auto,Auto,Auto">
        <Label Grid.Row="0" Grid.Column="0" Text="Nombre:"
FontAttributes="Bold" />
        <Label Grid.Row="0" Grid.Column="1" Text="{Binding Nombre}" />
        <Label Grid.Row="1" Grid.Column="0" Text="Teléfono:"
FontAttributes="Bold" />
        <Label Grid.Row="1" Grid.Column="1" Text="{Binding Telefono}" />
        <Label Grid.Row="2" Grid.Column="0" Text="Correo:"
FontAttributes="Bold" />
        <Label Grid.Row="2" Grid.Column="1" Text="{Binding Correo}" />
        <Label Grid.Row="3" Grid.Column="0" Text="Dirección:"
FontAttributes="Bold" />
        <Label Grid.Row="3" Grid.Column="1" Text="{Binding Direccion}" />
    </Grid>
</ContentPage>